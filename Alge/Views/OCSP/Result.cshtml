@model OCSPStatusViewModel

@{
    ViewData["Title"] = "Result";
}

<link href="~/css/ocsp.min.css" rel="stylesheet" asp-add-nonce="true" />
<div id="content">
    @if (Model.Status == 0)
    {
        <svg class="green" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M504 256c0 136.967-111.033 248-248 248S8 392.967 8 256 119.033 8 256 8s248 111.033 248 248zM227.314 387.314l184-184c6.248-6.248 6.248-16.379 0-22.627l-22.627-22.627c-6.248-6.249-16.379-6.249-22.628 0L216 308.118l-70.059-70.059c-6.248-6.248-16.379-6.248-22.628 0l-22.627 22.627c-6.248 6.248-6.248 16.379 0 22.627l104 104c6.249 6.249 16.379 6.249 22.628.001z" /></svg>
        <h2>This certificate is valid and genuine!</h2>
    }
    else if (Model.Status == 1)
    {
        <svg class="red" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M256 8C119 8 8 119 8 256s111 248 248 248 248-111 248-248S393 8 256 8zM124 296c-6.6 0-12-5.4-12-12v-56c0-6.6 5.4-12 12-12h264c6.6 0 12 5.4 12 12v56c0 6.6-5.4 12-12 12H124z" /></svg>
        <h2>This certificate has been revoked!</h2>
    }
    else
    {
        <svg class="gold" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512"><path d="M569.517 440.013C587.975 472.007 564.806 512 527.94 512H48.054c-36.937 0-59.999-40.055-41.577-71.987L246.423 23.985c18.467-32.009 64.72-31.951 83.154 0l239.94 416.028zM288 354c-25.405 0-46 20.595-46 46s20.595 46 46 46 46-20.595 46-46-20.595-46-46-46zm-43.673-165.346l7.418 136c.347 6.364 5.609 11.346 11.982 11.346h48.546c6.373 0 11.635-4.982 11.982-11.346l7.418-136c.375-6.874-5.098-12.654-11.982-12.654h-63.383c-6.884 0-12.356 5.78-11.981 12.654z" /></svg>
        <h2>@(String.IsNullOrEmpty(Model.Error) ? "There was a error processing the request. Please try again!" : Model.Error)</h2>
    }

    <br />
    @if(Model.Status == 0 || Model.Status == 1)
    {
        <h4>OCSP Information:</h4>
        <table class="informationTable">
            <tr>
                <td>Produced At:</td>
                <td>@Model.ProducedAt</td>
            </tr>
            <tr>
                <td>This Updated:</td>
                <td>@Model.ThisUpdate</td>
            </tr>
            <tr>
                <td>Next Update:</td>
                <td>@Model.NextUpdate</td>
            </tr>
            @if (Model.Status == 1)
            {
                <tr>
                    <td>Revoked At:</td>
                    <td>@Model.RevocationTime</td>
                </tr>
                <tr>
                    <td>Revocation Reason:</td>
                    <td>@(Model.RevocationReason == -1 ? "Not Provided" : Model.RevocationReason.ToString())</td>
                </tr>
            }
        </table>
        <h4>Certificate Information:</h4>
        <table class="informationTable">
            <tr>
                <td>Subject:</td>
                <td>@(Model.Certificate.Subject)</td>
            </tr>
            <tr>
                <td>Issuer:</td>
                <td>@(Model.Certificate.Issuer)</td>
            </tr>
            <tr>
                <td>Serial Number:</td>
                <td>@(Model.Certificate.SerialNumber)</td>
            </tr>
            <tr>
                <td>Expiration Date:</td>
                <td>@(Model.Certificate.ExpirationDate)</td>
            </tr>
        </table>
    }
    @Html.ActionLink("Back", "Index", "OCSP", null, new { @class = "underline blue" })
</div>

