
@{
    ViewData["Title"] = "Crypto-Knight";
}
<div id="content">
    <link href="~/css/crypto.min.css" rel="stylesheet" asp-add-nonce="true" />
    <script src="~/js/crypto.js" asp-add-nonce="true"></script>
    <h1 class="underline">Crypto-Knight</h1>
    <h3>Options</h3>
    <label for="algorithm">Select a algorithm: </label><select id="algorithm">
        <option value="SHA-1">SHA 1</option>
        <option value="SHA-256">SHA 256</option>
        <option value="SHA-384">SHA 384</option>
        <option value="SHA-512">SHA 512</option>
    </select>
    <br />
    <h3>Input</h3>
    <div id="inputType">
        <input type="radio" id="inputText" value="text" name="input" checked>
        <label for="inputText">Text</label>

        <input type="radio" id="inputFile" value="file" name="input">
        <label for="inputFile">File</label>

    </div>
    <input id="file" type="file" class="hidden" />
<textarea class="input" id="text">
</textarea>
    <br />
    <h3 id="outputTitle">Output</h3>
<textarea id="output" readonly>
</textarea>
</div>